<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="141dp"
    android:layout_height="181dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="23dp"
    android:layout_margin="5dp"
    android:id="@+id/mentCard">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#51504f"
        >

        <ImageView
            android:id="@+id/MentorImg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="7dp"


            android:clipToOutline="true"
            android:scaleType="centerCrop"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <!--    android:background="@drawable/rounded_corners" -->
        <TextView
            android:id="@+id/MentorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:text="Azib"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MentorImg"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/MentorFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ouassim"
            android:textColor="@color/white"
            android:textSize="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MentorName"
            android:layout_marginStart="8dp"
            android:textAllCaps="true"/>

        <ImageView
            android:id="@+id/addMentor"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@drawable/rounded_corners2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="13dp"
            android:src="@drawable/ic_baseline_add_24"
            android:padding="5dp"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>