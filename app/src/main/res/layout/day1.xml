<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_margin="20dp"
    android:layout_marginBottom="400dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="239dp"
        android:id="@+id/workshopLayout">


        <androidx.cardview.widget.CardView
            android:id="@+id/descriptionBox"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/Orange">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dateLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"

                    android:layout_toStartOf="@+id/attend_btn"
                    tools:text="Mozilla description "
                    tools:textColor="@color/white"
                    tools:textSize="15dp"
                    android:layout_toLeftOf="@+id/attend_btn"
                    android:layout_marginEnd="10dp"
                    android:maxLines="2">

                </TextView>

                <LinearLayout
                    android:id="@+id/dateLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:layout_alignStart="@+id/tvName"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        tools:text="Thursday"
                        android:textColor="@color/white">

                    </TextView>


                </LinearLayout>

                <TextView

                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/descriptionBox"
                    android:layout_marginLeft="10dp"
                    android:text="Workshop Name"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    tools:ignore="NotSibling">

                </TextView>

                <Button
                    android:id="@+id/attend_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/gray"
                    android:elevation="5dp"
                    android:text="attend"
                    app:cornerRadius="10dp"

                    >

                </Button>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageBox"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_above="@+id/descriptionBox"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/img"></ImageView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>

