<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sessCard"
    android:transitionName="card_transition"
    app:cardCornerRadius="20dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/img" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="#80000000"
        app:cardElevation="100dp"
        android:id="@+id/crdm"
        >

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/SessionTitlem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Devlepment"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/SessionTypem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/SessionTitlem"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:text="workshop"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:30 - 16:00"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="15dp"/>
            <ImageView
android:id="@+id/any"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_access_time_filled_24"
                android:layout_toStartOf="@id/time"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="5dp"/>
            <TextView
                android:id="@+id/salle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="workshop"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_toStartOf="@id/any"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>



</androidx.cardview.widget.CardView>